  <!-- HTML code goes here -->
  <div id="banner-message">
    <p>Hello World</p>
    <button>Change color</button>
  </div>
  <!-- JAVASCRIPT code goes here -->
  <script type="text/javascript">
    // find elements
    var banner = $("#banner-message")
    var button = $("button") //Never use # here
    <!-- JQUERY code goes here -->
    // handle click and add class
    button.on("click", function(){
      banner.addClass("alt")
    })
  </script>
  <!-- Window resizing goes here. It can also be inside the previous script area, it's just simple JS-->
  <script type="text/javascript">
    function Window_onLoad(){  // resize to quarter of screen area, centered
	   //custom resize : window.resizeTo(300,290);
	   //resize depending on screen (very beautiful) :
       window.resizeTo(screen.availWidth/2,screen.availHeight/2);
       window.moveTo(screen.availWidth/4,screen.availHeight/4);
    }
    window.onload=Window_onLoad;
  </script>
