  <!-- TODO: Missing CoffeeScript 2 -->

  <script type="text/javascript">


    window.onload=function(){
      
// find elements
var banner = $("#banner-message");
var button = $("button");

$('#button').click(function() {

  var currVal = $('#main-textarea').val();

  $('#main-textarea').val(currVal.toLowerCase());

  var myString = $('#main-textarea').val();
  var firstChar = myString.substring( 0, 1 ); // == "c"
  var firstChar = firstChar.toUpperCase();
  var tail = myString.substring( 1 ); // == "heeseburger"
  myString = firstChar + tail; // myString == "Cheeseburger"

  $('#main-textarea').val(myString);
  console.debug(myString);
});

    }

</script>

